{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"],
  "extends": "./tsconfig.json",
  "include": [
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts"
  ]
}
